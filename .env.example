# AI-Powered Documentation Crawler Configuration

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Crawler Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
DELAY_BETWEEN_REQUESTS=1

# Storage Settings
DATA_DIR=./data
LOG_LEVEL=INFO

# Embedding Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
MAX_CHUNKS_PER_DOC=50

# FAISS Settings
FAISS_INDEX_TYPE=IndexFlatIP
VECTOR_DIMENSION=384

# LLM/RAG Settings (Enhanced for comprehensive responses)
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4096
RAG_CONTEXT_CHUNKS=5
RAG_CONTENT_LENGTH=1500

# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true